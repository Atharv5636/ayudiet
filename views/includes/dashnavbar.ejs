<!-- dashnavbar.ejs -->
<nav class="dashboard-navbar">
  <div class="navbar-left">
    <!-- Logo / Brand -->
    <a href="/" class="brand-logo">
      <img src="/images/logo.jpg" alt="AyuDiet Logo" class="logo-img" />
    </a>

    <!-- Greeting -->
    <div class="welcome-text">
      <h1 class="greeting">
        Welcome back, <span class="doctor-name">Dr.
  <%= currentUser ? currentUser.fullname : "Doctor" %>
</span>

      </h1>
      <p class="current-date">
        <script>
          // Dynamically show today's date
          document.write(new Date().toLocaleDateString("en-IN", {
            weekday: "long",
            day: "numeric",
            month: "long",
            year: "numeric"
          }));
        </script>
      </p>
    </div>
  </div>

  <div class="navbar-right">
    <!-- Search bar -->
    <div class="search-container">
      <form class="d-flex" role="search">
        <div class="input-group">
          <input
            class="form-control"
            type="search"
            placeholder="Search Patients"
            aria-label="Search"
          />
          <button class="btn btn-outline-success" type="submit" aria-label="Search">
            <i class="fa-solid fa-search"></i>
          </button>
        </div>
      </form>
    </div>

    <!-- Notification Bell -->
    <button class="icon-btn notif-btn" aria-label="Notifications">
      <i class="fa-solid fa-bell"></i>
      <span class="notif-badge">3</span>
    </button>

    <!-- Profile Dropdown -->
    <div class="dropdown">
      <button
        class="btn btn-light dropdown-toggle profile-btn"
        type="button"
        data-bs-toggle="dropdown"
        aria-expanded="false"
      >
        <span class="profile-avatar">&#128100;</span>
      </button>
      <ul class="dropdown-menu dropdown-menu-end">
        <li><a class="dropdown-item" href="#">My Profile</a></li>
        <li><a class="dropdown-item" href="#">Settings</a></li>
        <li><hr class="dropdown-divider" /></li>
        <li><a class="dropdown-item text-danger" href="/logout">Logout</a></li>
      </ul>
    </div>
  </div>
</nav>

